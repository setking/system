/* pages/cardRecharge/cardRecharge.wxss */

page {
    background: #fff;
    margin-bottom: 20px;
}

.con {
    padding-bottom: 80px;
}

.b-detail {
    position: relative;
    color: #fff;
    height: 450rpx;
    width: 95%;
    margin: 0 auto;
    margin-top: 10px;
}

.b-detail-img {
    height: 100%;
    width: 100%;
    position: absolute;
}

.b-detail-title {
    font-size: 21px;
    color: #fff;
    z-index: 66;
    position: absolute;
    top: 20px;
    left: 4%;
}

.b-detail-discount {
    font-size: 14px;
    color: #fff;
    position: absolute;
    left: 4%;
    bottom: 92rpx;
    z-index: 66;
}

.big {
    font-size: 32px;
}

.card-surplus {
    padding: 5px 5%;
    text-align: right;
    color: #4b87e0;
    font-size: 16px;
}

.pay-num {
    width: 100%;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 34px;
    color: #433d3d;
    margin-top: 40px;
}

.pay {
    width: 100%;
    height: 30rpx;
    text-align: center;
    line-height: 30rpx;
    font-size: 16px;
    color: #433d3d;
    margin-top: 10px;
}

.pay-count {
    width: 100%;
    height: 60rpx;
}

.pay-info {
    width: 92%;
    height: auto;
    margin: 0 auto;
    margin-top: 30px;
}

.pay-left {
    float: left;
    width: 50%;
    text-align: left;
}

.pay-right {
    float: right;
    width: 50%;
    text-align: right;
}

.pay-title {
    text-align: left;
    color: #433d3d;
    font-size: 12px;
}

.pay-message {
    text-align: right;
    color: #433d3d;
    font-size: 12px;
}

.pay-type {
    width: 100%;
    height: auto;
    text-align: center;
    color: #433d3d;
    font-size: 16px;
    margin-top: 20px;
}

.pay-wx {
    width: 92%;
    height: 60rpx;
    margin: 10px auto;
    margin-bottom: 40rpx;
}

.pay-wx-left, .pay-wx-right {
    width: 50%;
    float: left;
}

.pay-wx-icon {
    width: 30px;
    height: 30px;
    float: left;
    margin-left: 10rpx;
}

.pay-wx-icon1 {
    width: 36px;
    height: 36px;
    float: left;
}

.pay-wx-icon image {
    width: 100%;
    height: 100%;
}

.pay-wx-left text {
    margin-left: 20rpx;
    text-align: center;
    line-height: 35px;
    color: #949494;
    font-size: 14px;
}

.pay-check {
    width: 36px;
    height: 36px;
    float: right;
    /* margin-top: 20rpx; */
}

.pay-check image {
    width: 100%;
    height: 100%;
}

.pay-uncheck {
    width: 24px;
    height: 24px;
    float: right;
    border-radius: 8px;
    margin-top: 20rpx;
    /* border: 1px solid#b8b8b8; */
}

.pay-uncheck image {
    width: 100%;
    height: 100%;
}

.pay-btn-main {
    width: 100%;
    height: 60px;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
}

.pay-btn {
    width: 93%;
    height: 94rpx;
    background: #f5d136;
    text-align: center;
    line-height: 94rpx;
    color: #4b4949;
    letter-spacing: 3px;
    font-size: 20px;
    border-radius: 8px;
    margin: 0 auto;
}

.mask {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.modalDlg {
    width: 550rpx;
    height: 450rpx;
    background: #fff;
    border-radius: 8px;
    margin: 50% auto;
    overflow: hidden;
    position: relative;
}

.payBybalance {
    width: 100%;
    height: 22px;
    margin: 5px auto;
    text-align: center;
    font-size: 16px;
    color: #433d3d;
}

.paynum {
    width: 100%;
    text-align: center;
    height: 48px;
    margin: 0 auto;
    line-height: 48px;
    margin-bottom: 20rpx;
}

.payForBus, .payForCardName {
    width: 85%;
    margin: 0 auto;
    text-align: left;
    color: #252525;
    line-height: 22px;
    font-size: 14px;
}

.marb {
    margin-bottom: 24rpx;
}

.payForbtn {
    width: 100%;
    height: 50px;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    background: pink;
    position: absolute;
    bottom: 0;
}

.btnForCancel {
    width: 50%;
    height: 50px;
    float: left;
    background: #f6f4f4;
    border-bottom-left-radius: 8px;
    font-size: 16px;
    color: #252525;
    letter-spacing: 1.61px;
    line-height: 50px;
    text-align: center;
}

.btnForPay {
    width: 50%;
    height: 50px;
    float: left;
    background: #ffd006;
    font-size: 16px;
    color: #252525;
    letter-spacing: 1.61px;
    line-height: 50px;
    text-align: center;
}
