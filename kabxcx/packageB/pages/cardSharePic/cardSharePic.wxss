/* pages/cardSharePic/cardSharePic.wxss */
page{
  background: #eee;
font-size: 32rpx;
}
.share{
  background: #fff;
  margin:20rpx auto;
}
.share-img{
  width: 152rpx;
  height: 56rpx;
  padding:30rpx 10px;
  padding-bottom: 0rpx;
}
.sharetitle{
  width: 93%;
  height: auto;
  padding:30rpx 40rpx;
}

.card-list{
  width: 100%;
  height: auto;
}
.card-list-info{
  width: 93%;
  height: 35px;
  margin: 0 auto;
}
.card-list-left{
  flex:1;
  height: 35px;
  text-align: left;
  color: #4b4949;
  font-size: 13px;
  line-height: 35px;
  letter-spacing: 2px;
}
.card-list-right{
  flex:1;
  height: 35px;
  text-align: right;
  color: #4b4949;
  font-size: 13px;
  line-height: 35px;
  letter-spacing: 2px;
}
.card-list-main{
  width: 93%;
  height: 205px;
  border-radius: 15px;
  margin: 0 auto;
  margin-bottom: 10px;
  position: relative;
}
.card-img{
  width: 100%;
  height: 100%;
}
.card-name{
  position: absolute;
  top: 10px;
  left: 5%;
  color: #fff;
  font-size: 14px;
}
.card-status{
  position: absolute;
  top: 10px;
  right: 5%;
  width: 47px;
  height: 20px;
  border-radius: 10px;
  background: #b17738;
  color: #ffffff;
  font-size: 11px;
  line-height: 20px;
  text-align: center;
}
.card-owner-img{
  width: 42px;
  height: 42px;
  position: absolute;
  left: 4%;
  bottom:50px;
  border-radius: 21px;
}
.card-owner-name{
  font-size: 12px;
  color: #ffffff;
  position: absolute;
  left: 20%;
  bottom:72px;
}
.card-owner-years{
  font-size: 9px;
  color: #ffffff;
  position: absolute;
  left: 25%;
  bottom: 56px;
}
.card-owner-sex{
  width: 13px;
  height: 13px;
  position: absolute;
  left: 20%;
  bottom:55px;
}
.card-income{
  position: absolute;
  bottom: 60px;
  right: 5%;
  color: #fff;
  font-size: 15px;
  letter-spacing: 1px;
}
.pay-count{
  width: 90%;
  height: 60px;
  margin: 0 auto;
  border-bottom: 1px solid #EAE8E8;
  position: relative;
}
.see-more{
  width: 90%;
  height: 20px;
  margin: 0 auto;
  text-align: right;
  color: #4A90E2;
  font-size: 12px;
}
.share_image{
  width: 100%;
  padding: 25rpx 0;
}
.sharetag{
  width: 40%;
font-size: 32rpx;
padding-left: 20rpx;
float: left;
}
.shareerweima{
  width: 40%;
font-size: 32rpx;
padding-right: 20rpx;
float: right;
text-align: center;
}
.shareerweima image{
  width: 45%;
}
.btn-area{
  width: 100%;
  height: auto;
}
.modal-list-main{
  width: 90%;
  margin: auto;
}
.list-main-left{
  text-align: center;
  display: table;
}