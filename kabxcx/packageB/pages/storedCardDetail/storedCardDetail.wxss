/* pages/storedCardDetail/storedCardDetail.wxss */
page{
  background: #fff;
  margin-bottom: 50px;
}
.card-list{
  width: 100%;
  height: auto;
  margin-top: 20px;
}
.card-list-info{
  width: 93%;
  height: 35px;
  margin: 0 auto;
}
.card-list-left{
  width: 50%;
  height: 35px;
  float: left;
  text-align: left;
  color: #4b4949;
  font-size: 13px;
  line-height: 35px;
  letter-spacing: 2px;
}
.card-list-right{
  width: 50%;
  height: 35px;
  float: left;
  text-align: right;
  color: #4b4949;
  font-size: 13px;
  line-height: 35px;
  letter-spacing: 2px;
}
.card-list-main{
  width: 94%;
  height: 205px;
  border-radius: 15px;
  margin: 0 auto;
  margin-bottom: 10px;
  position: relative;
}
.card-img{
  width: 100%;
  height: 100%;
}
.card-info{
  width: 100%;
  height: 202px;
  position: relative;
}
.card-info-main{
  width: 95%;
  height: 346px;
  position: absolute;
  top: 0;
  right: 0;
}
.card-setting{
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #d8d8d8;
}
.card-setting-left{
  width: 40%;
  height: 50px;
  float: left;
  color: #4b4949;
  font-size: 14px;
  letter-spacing: 2px;
  text-align: left;
  line-height: 50px;
}
.card-setting-right{
  width: 55%;
  height: 50px;
  float: left;
  font-size: 16px;
  color: #b2b2b2;
  letter-spacing: 2px;
  text-align: right;
  line-height: 50px;
}
.next{
  width: 24px;
  height: 25px;
  float: right;
  margin-top: 14px;
}
.card-btn{
  width: 100%;
  height: 80px;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.card-btn-main{
  width: 90%;
  height: 50px;
  margin: 15px auto;
}
.recharge-btn{
  width: 288rpx;
  height: 50px;
  border: 1px solid #B8b8b8;
  border-radius: 7px;
  text-align: center;
  line-height: 50px;
  color: #4b4949;
  font-size: 16px;
  float: left;
}
.pay-btn{
  width: 288rpx;
  height: 50px;
  background: #FDD804;
  border-radius: 7px;
  text-align: center;
  line-height: 50px;
  color: #4b4949;
  font-size: 16px;
  float: right;
}