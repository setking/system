.no-card {
    width: 100%;
    height: auto;
    overflow: hidden;
}

.no-card image {
    width: 178px;
    height: 176px;
    margin: 40px auto;
    display: block;
}

.no-text {
    text-align: center;
    font-size: 17px;
    color: #d7d7d7;
    letter-spacing: 1px;
}

.card-list {
    width: 100%;
    height: auto;
}

.card-list-info {
    width: 93%;
    height: 35px;
    margin: 0 auto;
}

.card-list-left {
    width: 50%;
    height: 35px;
    float: left;
    text-align: left;
    color: #4b4949;
    font-size: 13px;
    line-height: 35px;
    letter-spacing: 2px;
}

.card-list-right {
    width: 50%;
    height: 35px;
    float: left;
    text-align: right;
    color: #4b4949;
    font-size: 13px;
    line-height: 35px;
    letter-spacing: 2px;
}

