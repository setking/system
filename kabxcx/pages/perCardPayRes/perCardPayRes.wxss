/* pages/perCardPayRes/perCardPayRes.wxss */
page{
  background: #ffffff;
}
.pay-container{
  width: 90%;
  height: 170px;
  margin: 10px auto;
  overflow: hidden;
}
.pay-main{
  width: 60%;
  height: 60px;
  margin: 0 auto;
  margin-top: 20px;
  text-align: center;
}
.pay-sign{
  font-size: 36px;
  color: #000000;
  text-align: left;
}
.pay-num{
  font-size: 55px;
  color: #000;
  padding-left: 5%;
}
.pay-success{
  width: 45%;
  height: 50px;
  margin: 0 auto;
  margin-top: 20px;
  text-align: left;
}
.pay-icon{
  width: 36px;
  height: 36px;
  float: left;
  margin-right: 20rpx;
}
.pay-text{
  line-height: 34px;
  color: #7c7b7b;
  font-size:18px;
  text-align: left;
}
.pay-info{
  width: 90%;
  height: 221px;
  margin: 0 auto;
  margin-top: 40px;
  padding-bottom: 180px;
}
.pay-list{
  width: 100%;
  height: 26px;
  margin-bottom: 10px;
}
.pay-list-left{
  width: 30%;
  float: left;
  text-align: left;
  color: rgba(37, 37, 37, 0.65);
  font-size: 13px;
  letter-spacing: 1.31px;
}
.pay-list-right{
  width: 70%;
  float: left;
  text-align: right;
  color: rgba(37, 37, 37, 0.65);
  font-size: 13px;
  letter-spacing: 1.31px;
}
.bottom-img{
  width: 100%;
  height: 180px;
  position: fixed;
  bottom: 0;
  left: 0;
}
.bottom-img image{
  width: 100%;
  height: 100%;
}