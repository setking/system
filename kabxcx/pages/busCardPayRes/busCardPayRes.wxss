/* pages/busCardPayRes/busCardPayRes.wxss */
page{
  background: #ffffff;
}
.pay-container{
  width: 90%;
  height: 170px;
  margin: 10px auto;
  overflow: hidden;
}
.share-icon{
  width:45rpx;
  height: 45rpx;
  position: fixed;
  top: 25rpx;
  right: 50rpx;
}
.pay-main{
  width: 60%;
  height: 100px;
  margin: 0 auto;
  margin-top: 30px;
  text-align: center;
}
.pay-sign{
  font-size: 55px;
  color: #000000;
  text-align: left;
}
.pay-num{
  font-size: 55px;
  color: #000000;
  padding-left: 5%;
}
.pay-success{
  /* margin-top: 20px; */

}
.pay-icon{
  width: 36px;
  height: 36px;
  float: left;
}
.pay-text{
  line-height: 34px;
  color: #7c7b7b;
  font-size:18px;
}
.pay-info{
  width: 90%;
  height: 221px;
  margin: 0 auto;
  margin-top: 40px;
  padding-bottom: 180px;
}
.pay-list{
  width: 100%;
  height: 26px;
  margin-bottom: 5px;
}
.pay-list-left{
  width: 30%;
  float: left;
  text-align: left;
  color: rgba(37, 37, 37, 0.65);
  font-size: 13px;
  letter-spacing: 1.31px;
}
.pay-list-right{
  width: 70%;
  float: left;
  text-align: right;
  color: rgba(37, 37, 37, 0.65);
  font-size: 13px;
  letter-spacing: 1.31px;
}
.bottom-img{
  width: 100%;
  height: 180px;
  position: fixed;
  bottom: 0;
  left: 0;
}
.bottom-img image{
  width: 100%;
  height: 100%;
}

.mask{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.modalDlg{
  width: 550rpx;
  height: 270rpx;
  background: #fff;
  border-radius: 8px;
  margin: 50% auto;
  overflow: hidden;
  position: relative;
}
.prompt-message{
  text-align: center;
  color: #252525;
  font-size: 14px;
  width: 90%;
  margin: 20px auto;
  margin-top: 10px;
  line-height: 25px;
}
.prompt-btn{
  width: 100%;
  height: 48px;
  margin-top: 27px;
  position: absolute;
  bottom: 0;
}
.again-btn{
  width: 50%;
  height: 48px;
  border:none;
  background: #fff;
  text-align: center;
  line-height: 48px;
  color: #252525;
  font-size: 16px;
  letter-spacing: 1.61px;
  float: left;
  bottom: 0;
}
.buycard-btn{
  width: 50%;
  height: 48px;
  border: none;
  background:  #FFD006;
  text-align: center;
  line-height: 48px;
  color: #252525;
  font-size: 16px;
  letter-spacing: 1.61px;
  float: left;
  bottom: 0;
}

.share{
  position: fixed;
  bottom: -300px;
}