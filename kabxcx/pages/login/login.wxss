.btn-area {
    margin-top: 100rpx;
}

.section .btn-area {
    margin-top: 0rpx;
}

.section input {
    flex: 1;
}

.section .btn-area button {
    font-size: 12px;
}

.section .btn-area button.disabled {
    background: #d8d8d8;
    box-shadow: 0 2px 4px 0 #d8d8d8;
}

.info {
    width: 100%;
    height: 32rpx;
    color: #b0aeae;
    font-size: 22rpx;
    text-align: center;
    line-height: 32rpx;
    position: fixed;
    bottom: 40rpx;
    left: 0;
}

.usePass {
    width: 100%;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 30rpx;
    margin-top: 50rpx;
    color: #333;
}
